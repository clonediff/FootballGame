<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:UIApplication.ViewModels"
             x:Class="UIApplication.Views.LobbyPage"
             x:DataType="viewmodel:LobbyViewModel"
             Title="LobbyPage">
    <VerticalStackLayout>
        <Button x:Name="ReadyBtn"
                Text="Ready"
                WidthRequest="100" 
                Clicked="ChangeReadyState"
                BackgroundColor="Green"/>

        <VerticalStackLayout x:Name="Players">
        
        </VerticalStackLayout>

        <Button
            x:Name="StartGameBtn"
            Text="GO!"
            WidthRequest="100" 
            CommandParameter="{Binding Players}"
            Command="{Binding GoToGameCommand}"
            IsVisible="False"
            IsEnabled="False">
        </Button>
    </VerticalStackLayout>
</ContentPage>