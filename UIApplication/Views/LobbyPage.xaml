<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:UIApplication.ViewModels"
             xmlns:model="clr-namespace:FootballLogicLib.Models;assembly=FootballLogicLib"
             x:Class="UIApplication.Views.LobbyPage"
             x:DataType="viewmodel:LobbyViewModel"
             Title="LobbyPage">

    <VerticalStackLayout>

        <Button 
            x:Name="ReadyBtn"
            Text="Ready"
            WidthRequest="100"
            CommandParameter="{Binding Players}"
            Command="{Binding GoToGameCommand}">
        </Button>

        <CollectionView
            x:Name="Players"
            ItemsSource="{Binding Players}">
            <CollectionView.ItemTemplate>
                <DataTemplate 
                    x:DataType="model:Player">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Id: "/>
                        <Label Text="{Binding Id}"/>
                        <Label Text="Name: "/>
                        <Label Text="{Binding TeamName}"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>